@page "/registration"
<main>

<div class="container reg">
        
    <div class="row">
        <div class="col-md-5">
                
    <form class="p-4">
         <h3 classs=" p-3  mb-4">Register</h3>
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input id="name" class="form-control" type="text" placeholder="Name" />
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input id="email" class="form-control" type="email" placeholder="Email" />
        </div>
        <div class="mb-3">
            <label for="phoneNumber" class="form-label">Phone Number</label>
            <input id="phoneNumber" class="form-control" type="text" placeholder="Phone number" />
        </div>
       
        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input id="password" class="form-control" type="password" placeholder="Password" />
        </div>
        <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input id="confirmPassword" class="form-control" type="password" placeholder="Password" />
        </div>
        <div class="d-flex justify-content-between">
            <a href="/login" class="btn btn custom-btn" type="button">Sign Up</a>
            <button class="btn btn-dark" type="reset" style="border:solid">Reset</button>
        </div>
    </form>
   </div>
   </div>
</div>
</main>

<style>
    .reg{
        background-image: url('https://images.pexels.com/photos/4386466/pexels-photo-4386466.jpeg?auto=compress&cs=tinysrgb&w=600');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: left center;
        margin-top:3em;
       
    }
    main{
        background-color:white;
    }
    .custom-btn{
        background-color: #F56021;
        color:white;
        
    }
    h3{
        font-weight:600;
        

    
        font-size: 36px;
        line-height: 44px;
        font-style: normal;
    }
    input{
        height:3em;
    }
    
</style>